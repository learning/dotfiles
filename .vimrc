set nocompatible

filetype on
filetype indent on
filetype plugin on

let mapleader = ","
syntax enable
"set foldmethod=syntax
set ignorecase
set hlsearch
set fileencoding=utf-8
set encoding=utf-8
set backspace=indent,eol,start
set ts=2 sts=2 sw=2 expandtab

set smartcase
set gdefault
set incsearch
set showmatch
set number
set visualbell
set cursorline
set nolist
set listchars=tab:>-,trail:-
set autoindent
